<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">
        <%= post.title %>
    </div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= post.image %>" alt="">
            <div class="content">
                <span><%= post.created.toDateString() %></span>
                <hr>
                <div class="description">
                    <p><%- post.body %></p> <!--Using - instead of = makes ejs evaluate, so any html in the post is used instead of displayed as text-->
                </div>
                <br>
                <a class="ui blue basic button" href="/posts/<%= post._id %>/edit">Edit</a>
                <form id="delete" action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                    <button class="ui red basic button">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer") %>