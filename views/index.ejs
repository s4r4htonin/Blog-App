<%- include("partials/header") %>

<div class="ui main text container">
    <div class="ui huge header">Welcome to my cat blog!</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <!-- posts is variable for posts -->
            <% for (i = 0; i < posts.length; i++){ %>
            <div class="item">
                <div class="image">
                    <img src="<%= posts[i].image %>" alt="">
                </div>
                <div class="content">
                    <a class="header" href="/posts/<%= posts[i]._id %>"><%= posts[i].title %></a>
                    <div class="meta">
                        <span><%= posts[i].created.toDateString() %></span>
                    </div>
                    <div class="description">
                        <p><%- posts[i].body.substring(0, 100) %>...</p>
                    </div>
                    <div class="extra">
                        <a class="ui floated basic violet button" href="/posts/<%= posts[i]._id %>">
                            Read More
                            <i class="right chevron icon"></i>
                        </a>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>

<%- include("partials/footer") %>