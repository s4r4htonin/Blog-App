<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog Post</div>
    <form class="ui form" action="/posts/<%= post._id %>?_method=PUT" method="POST"> <!--Cannot use PUT request with form, changes to GET automatically, "?_method=PUT" is work around cheat-->
        <div class="field">
            <label>Title</label>
            <input type="text" name="post[title]" value="<%= post.title%>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="post[image]" value="<%= post.image%>">
        </div>
        <div class="field">
            <label>Content</label>
            <textarea name="post[body]" required><%= post.body%></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>

<%- include("partials/footer") %>